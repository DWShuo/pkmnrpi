package items;

import game.GameEngine;

import java.util.ArrayList;

public class Ball extends Item {
	public static final int POKEBALL = 0, GREATBALL = 1, ULTRABALL = 2, MASTERBALL = 3, FASTBALL = 4, HEAVYBALL = 5, LEVELBALL = 6, LUREBALL = 7, LOVEBALL = 8, MOONBALL = 9,
			SAFARIBALL = 10, FRIENDBALL = 11;

	public int balltype;

	public Ball(String data) {
		super(data);
	}

	public Ball(ArrayList<String> data) {
		super(data);
	}

	public static ArrayList<Ball> loadAll(ArrayList<String> data) {
		ArrayList<Ball> b = new ArrayList<Ball>();
		int count = 0;
		while (count < data.size()) {
			ArrayList<String> temp = new ArrayList<String>();
			temp.add(data.get(count++ ));
			temp.add(data.get(count++ ));
			b.add(new Ball(temp));
		}
		return b;
	}

	@Override
	public String toString() {
		return null;
	}

	public double catchRateMultiplier(GameEngine e) {
		if (balltype == POKEBALL)
			return pokeball(e);
		if (balltype == GREATBALL)
			return greatball(e);
		if (balltype == ULTRABALL)
			return ultraball(e);
		if (balltype == MASTERBALL)
			return masterball(e);
		if (balltype == FASTBALL)
			return fastball(e);
		if (balltype == HEAVYBALL)
			return heavyball(e);
		if (balltype == LEVELBALL)
			return levelball(e);
		if (balltype == LUREBALL)
			return lureball(e);
		if (balltype == LOVEBALL)
			return loveball(e);
		if (balltype == MOONBALL)
			return moonball(e);
		if (balltype == SAFARIBALL)
			return safariball(e);
		if (balltype == FRIENDBALL)
			return friendball(e);
		return 0;
	}

	private double pokeball(GameEngine e) {
		return 1;
	}

	private double greatball(GameEngine e) {
		return 1.5;
	}

	private double ultraball(GameEngine e) {
		return 2;
	}

	private double masterball(GameEngine e) {
		return 225;
	}

	private double fastball(GameEngine e) {
		return e.state.enemy.stats.speed > 100 ? 4 : 1;
	}

	private double heavyball(GameEngine e) {
		return 1;
	}

	private double levelball(GameEngine e) {
		return 1;
	}

	private double lureball(GameEngine e) {
		return 1;
	}

	private double loveball(GameEngine e) {
		return 1;
	}

	private double moonball(GameEngine e) {
		return 1;
	}

	private double safariball(GameEngine e) {
		return 1;
	}

	private double friendball(GameEngine e) {
		return 1;
	}
}
